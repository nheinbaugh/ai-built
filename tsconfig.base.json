{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@voting/shared/components": ["libs/shared/components/src/index.ts"],
      "@voting/shared/components/*": ["libs/shared/components/src/*"],
      "@voting/shared/data-models": ["libs/shared/data-models/src/index.ts"],
      "@nx-heinbaugh/vote-processing": ["libs/vote-processing/src/index.ts"],
      "@nx-heinbaugh/voter-management": ["libs/voter-management/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
